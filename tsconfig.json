{
  "compilerOptions": {
    "baseUrl": ".",  // Set baseUrl to the root of the project
    "paths": {
      "@/*": ["src/*"]  // This will resolve '@/' to 'src/'
    },
    "strict": true,  // Enable strict type-checking options
    "esModuleInterop": true,  // Enable compatibility with CommonJS modules
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react-jsx"  // Use the new JSX transform with React 17+
  },
  "include": [
    "src/**/*"  // Include all files under 'src' directory
  ]
}
